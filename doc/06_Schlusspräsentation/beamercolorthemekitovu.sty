\usepackage{xcolor}

\mode<presentation>

% Kitovu Palette
\definecolor{kitovu-green}{HTML}{00FF9F}
\definecolor{kitovu-light-blue}{HTML}{00B8FF}
\definecolor{kitovu-dark-blue}{HTML}{001EFF}
\definecolor{kitovu-violett}{HTML}{BD00FF}
\definecolor{kitovu-pink}{HTML}{D600FF}

% Color helpers
\colorlet{header-bg}{kitovu-violett}
\colorlet{title-fg}{kitovu-violett}
\colorlet{title-bg}{gray!10!white}
\colorlet{footer1-fg}{kitovu-violett}
\colorlet{footer1-bg}{gray!15!white}
\colorlet{footer2-fg}{kitovu-violett}
\colorlet{footer2-bg}{gray!30!white}

\colorlet{unknown}{kitovu-green}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=unknown!80!gray}
\setbeamercolor*{palette primary}{fg=footer2-fg!60!black,bg=footer2-bg}
\setbeamercolor*{palette secondary}{fg=footer1-fg!70!black,bg=footer1-bg}
\setbeamercolor*{palette tertiary}{bg=header-bg!80!black,fg=gray!10!white}
\setbeamercolor*{palette quaternary}{fg=unknown,bg=gray!5!white}

\setbeamercolor*{sidebar}{fg=unknown,bg=gray!15!white}

\setbeamercolor*{palette sidebar primary}{fg=unknown!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=unknown!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=gray!10!white}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=palette primary,fg=title-fg}
\setbeamercolor{frametitle}{bg=title-bg}
\setbeamercolor{frametitle right}{bg=gray!60!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
